<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    <LinkTo @route="author" class="btn-back">
      <span class="sr-only">Back</span>
    </LinkTo>

    <div class="slide-out-heading">
      <div class="title">
        <h3>Create Author</h3>
      </div>
    </div>

    <div class="slide-out-content">
      <form {{on "submit" this.saveAuthor}}>
        <div class="field">
          <label>First Name:</label>
          <Input @type="text" placeholder="First Name" @value={{this.model.firstName}} />
        </div>

        <div class="field">
          <label>Last Name:</label>
          <Input @type="text" placeholder="Last Name" @value={{this.model.lastName}} />
        </div>

        <div class="form-footer">
          <button type="submit" class="btn-submit">save</button>
        </div>
      </form>
    </div>
  </div>
</div>